<h1>Burger Logger!</h1>

<h2>Ordered Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="title">
  </div>

  <div class="form-group">
    <label for="ca">Burger Ingredients:</label>
    <input type="text" id="ca" name="ingredients">
  </div>

  <button type="submit">Place My Order</button>
</form>

<button type="click">Eat?</button>
