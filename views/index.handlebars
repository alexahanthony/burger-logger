{{!-- ordered burger list --}}
<div class="container2">
<div class="row">
  <div class="col-6">
    <h2>Ordered Burgers:</h2>
    <ol>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/unless}}
      {{/each}}
    </ol>
  </div>

{{!-- eaten burger list --}}
  <div class="col-6">
    <h2>Eaten Burgers:</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
</div>

